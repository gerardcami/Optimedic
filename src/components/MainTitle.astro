---
import { getI18N } from "../i18n/";
const { currentLocale = "es" } = Astro;
const i18n = getI18N({ currentLocale });
---

<section
  class="bg-[url('/img/hero.svg')] bg-cover bg-center text-white w-screen h-[calc(100vh-60px)] lg:h-[calc(100vh-64px)] flex items-center justify-around"
>
  <div
    class="flex flex-col text-center gap-6 font-bold mb-[60px] lg:mb-[64px] shadow-2xl backdrop-blur-sm bg-black/40 py-12 px-4 md:p-20 rounded-xl"
  >
    <h1 class="text-3xl md:text-6xl">{i18n.HOME_PAGE.TITLE}</h1>
    <h2 class="text-2xl md:text-4xl">{i18n.HOME_PAGE.SLOGAN}</h2>
  </div>
</section>
