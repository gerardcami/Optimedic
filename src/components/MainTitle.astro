---
import { getI18N } from '../i18n/'
const { currentLocale = 'es' } = Astro
const i18n = getI18N({ currentLocale })
---

<section
	class="flex h-[calc(100vh-60px)] w-screen items-center justify-around bg-[url('/img/hero.svg')] bg-cover bg-center text-white lg:h-[calc(100vh-64px)]"
>
	<div
		class="mb-[60px] flex flex-col gap-6 rounded-xl bg-black/40 px-4 py-12 text-center font-bold shadow-2xl backdrop-blur-sm md:p-20 lg:mb-[64px]"
	>
		<h1 class="text-3xl md:text-6xl">{i18n.HOME_PAGE.TITLE}</h1>
		<h2 class="text-2xl md:text-4xl">{i18n.HOME_PAGE.SLOGAN}</h2>
	</div>
</section>
