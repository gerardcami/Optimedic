---
import { getI18N } from "../i18n/";
const { currentLocale = "es" } = Astro;
const i18n = getI18N({ currentLocale });

const featuresData = i18n.HOME_PAGE.FEATURES;
---

<section class="flex justify-center items-center w-full h-[200px] gap-[80px]">
  {
    featuresData.map((feature) => (
      <article class="flex flex-col items-center w-1/4 h-full">
        <div class="icon" set:html={feature.icon} />
        <h3 class="font-bold text-lg">{feature.title}</h3>
        <hr class="my-[10px] w-1/4 border border-black rounded-full" />
        <p class="text-center" set:html={feature.description} />
      </article>
    ))
  }
</section>

