---
import Layout from '../../../layouts/Layout.astro'
import type { Product } from '../../../types/frames'
import FrameColors from '../../../components/frame-colors'
import { getI18N } from '../../../i18n/'
import FrameSpecs from '../../../components/FrameSpecs.astro'

const { currentLocale = 'es' } = Astro

const i18n = getI18N({ currentLocale }).FRAMES_PAGE
const seoData = i18n.DETAILS_SEO
const content = i18n

const framesTexts = content.TEXTS
const framesData = content.PRODUCTS

const { frame } = Astro.params

const product = framesData
	.flatMap((frameType: Product) => frameType.products)
	.find((product) => product.slug === frame)

if (!product) {
	throw new Error(`Product not found for slug: ${frame}`)
}

const seoContent = {
	SEO_TITLE: `${seoData.SEO_TITLE} ${product.name}`,
	SEO_DESCRIPTION: seoData.SEO_DESCRIPTION,
	SEO_URL: `${seoData.SEO_URL}${product.slug}`, // Aqu√≠ puedes integrar el slug o el nombre
	SEO_SHORT_NAME: `${seoData.SEO_SHORT_NAME} ${product.name}`
}

const details = product.details
---

<Layout seoData={seoContent}>
	<section
		class="flex w-screen flex-col items-center justify-center gap-8 bg-gradient-to-r from-teal-500 to-teal-700 px-8 py-12 text-white shadow-2xl md:px-16 lg:flex-row"
	>
		<div class="mx-auto flex flex-col gap-6 px-4 lg:w-1/2">
			<h1 class="text-center text-4xl font-bold leading-tight md:text-5xl lg:text-left">
				{product.name}
			</h1>
			<p class="text-center text-lg leading-relaxed md:text-xl lg:text-left">
				{details.detailed_description}
			</p>
		</div>

		<div class="flex items-center justify-center px-4 lg:w-1/3">
			<figure class="w-full max-w-lg rounded-lg shadow-lg">
				<img class="w-full rounded" src={product.card_image} alt={product.name} />
			</figure>
		</div>
	</section>

	<section class="mt-[100px] w-full md:mt-0">
		<article
			class="flex flex-col items-center justify-between gap-[100px] px-12 text-center lg:flex-row lg:text-start"
		>
			<div class="flex flex-col gap-6 md:px-12 lg:px-0">
				<p>{details?.intro_text_1}</p>
				<p>{details?.intro_text_2}</p>
				<p>{details?.intro_text_3}</p>
			</div>
			<img
				src={details?.intro_image}
				alt=""
				class="w-[500px] shadow-2xl"
				style="border-radius: 43% 57% 32% 68% / 61% 52% 48% 39%;"
			/>
		</article>
	</section>
	<FrameColors client:visible frame={product.name} colors={details.colors} texts={framesTexts} />
	<section class="mt-[100px] flex w-full flex-col gap-4 md:mt-0 md:px-12">
		<FrameSpecs texts={framesTexts} specs={details.specs} />
		<article class="flex flex-1 flex-col bg-white p-12 shadow-2xl md:rounded-lg">
			<h2 class="mb-12 text-3xl font-bold">{framesTexts.text_loupe_options}</h2>
			<div class="flex flex-col gap-2">
				{
					details.loupe_options ? (
						details.loupe_options.map((option) => (
							<a
								href={`${content.LOUPES_PATH}${option.slug}`}
								class="mb-2 border-b pb-2 text-teal-600 transition-colors duration-200 hover:text-teal-800 hover:underline"
							>
								{option.name}
							</a>
						))
					) : (
						<a
							href={content.LOUPES_PATH}
							class="text-teal-600 transition-colors duration-200 hover:text-teal-800 hover:underline"
						>
							{framesTexts.text_all_loupe_options}
						</a>
					)
				}
			</div>
		</article>
	</section>
</Layout>
