---
import Layout from "../../../layouts/Layout.astro";
import type { Product } from "../../../types/loupes";
import { getI18N } from "../../../i18n/";
import LoupeSpecs from "../../../components/LoupeSpecs.astro";

const { currentLocale = "es" } = Astro;
const i18n = getI18N({ currentLocale });

const loupesTexts = i18n.LOUPES.TEXTS;
const loupesData = i18n.LOUPES.PRODUCTS;

const { lupa } = Astro.params;

const product = loupesData
  .flatMap((loupeType: Product) => loupeType.products)
  .find((product) => product.slug === lupa);


if (!product) {
  throw new Error(`Product not found for slug: ${lupa}`);
}

const details = product.details;
---

<Layout title={product.name} description="">
  {
    <section
      class="w-[calc(100vw-5px)] py-12 flex items-center justify-center gap-8 px-8 md:px-16 shadow-[0_20px_25px_-4px_rgba(7,107,97,0.5)] bg-gradient-to-r from-teal-500 to-teal-700 text-white"
    >
      <div class="lg:w-1/2 flex flex-col gap-6 px-4 mx-auto">
        <h1 class="text-4xl md:text-5xl font-bold leading-tight text-center lg:text-left">{product.name}</h1>
        <p class="text-lg md:text-xl leading-relaxed text-center lg:text-left">{details.detailed_description}</p>
      </div>

      <div class="lg:w-1/3 flex justify-center items-center px-4">
        <figure class="w-full max-w-lg rounded-lg shadow-lg">
          <img class="w-full rounded" src={product.card_image} alt={product.name} />
        </figure>
      </div>
    </section>


    <section class="w-full flex flex-col gap-[100px]">
    <article class="flex gap-[100px] justify-between items-center">
      <div class="flex flex-col gap-5">
        {details.intro_text_1 && <p>{details.intro_text_1}</p>}
        {details.intro_text_2 && <p>{details.intro_text_2}</p>}
        {details.intro_text_3 && <p>{details.intro_text_3}</p>}
      </div>
      <img 
        src={details?.intro_image}
        alt="" 
        class="w-[500px] shadow-2xl"
        style="border-radius: 43% 57% 32% 68% / 61% 52% 48% 39%;" 
      />
    </article>   
  </section>    
  <section class="flex items-center justify-between">
    <img 
        src={details?.specs_image}
        alt="" 
        class="w-[500px] shadow-2xl"
        style="border-radius: 32% 68% 68% 32% / 50% 58% 42% 50%;" 
      />
    <div class="w-1/2 flex flex-col gap-4">
      <h2 class="text-3xl font-bold">{loupesTexts.text_title_specs}</h2>
      <p set:html={loupesTexts.text_intro_specs_1} class="text-gray-700" />
      <p set:html={loupesTexts.text_intro_specs_2} class="text-gray-700" />
      <p class="italic font-bold text-sm" set:html={loupesTexts.text_specs_disclaimer} class="text-gray-700" />
    </div>
  </section>
  <section class="w-full flex  gap-4">
    <LoupeSpecs texts={loupesTexts} specs={details.specs} />
    <article class="flex w-1/2 flex-col gap-5 bg-white shadow-2xl p-6 rounded-lg flex-1">
      <h2 class="text-3xl font-bold">{loupesTexts.text_frame_options}</h2>
      <div class="flex flex-col gap-2">
        {details.frame_options && (
          details.frame_options.map((option) => (
            <a
              href={`${i18n.LOUPES.FRAMES_PATH}${option.slug}`}
              class="hover:underline transition-colors duration-200 text-teal-600 hover:text-teal-800 border-b pb-2 mb-2"
            >
              {option.name}
            </a>
          ))
        )}
      </div>
    </art>
</section>
  }
</Layout>