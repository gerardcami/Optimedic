---
// Importar Layout e i18n
import Layout from "../layouts/Layout.astro";
import { getI18N } from "../i18n/";
const { currentLocale = "es" } = Astro;
const i18n = getI18N({ currentLocale });
---

<Layout
  title={i18n.DOCUMENTATION.TITLE}
  description={i18n.DOCUMENTATION.DESCRIPTION}
>
  <section class="documentation-section py-8">
    <h1 class="text-3xl font-bold mb-4">{i18n.DOCUMENTATION.TITLE}</h1>
    <p class="text-lg mb-8">{i18n.DOCUMENTATION.DESCRIPTION}</p>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        i18n.DOCUMENTATION.SECTIONS.map((section) => (
          <div class="card border rounded-lg shadow-lg p-6 bg-white">
            <h2 class="text-xl font-semibold mb-4">{section.name}</h2>
            <a
              href={section.href}
              download
              class="text-blue-500 hover:underline"
            >
              {i18n.DOCUMENTATION.TEXT_DOWNLOAD}
            </a>
          </div>
        ))
      }
    </div>
  </section>
</Layout>
