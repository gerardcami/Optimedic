---
import { ContactForm } from '../components/contact-form'
import Layout from '../layouts/Layout.astro'

import { getI18N } from '../i18n/'
const { currentLocale = 'es' } = Astro

const i18n = getI18N({ currentLocale }).CONTACT_PAGE
const seoData = i18n.SEO
const content = i18n
---

<Layout seoData={seoData}>
	<div
		class="flex min-h-[calc(100vh-60px)] w-screen flex-col lg:min-h-[calc(100vh-64px)] lg:flex-row"
	>
		<section class="w-full px-8 pb-20 pt-32 lg:w-1/2 lg:px-24 lg:py-48">
			<div class="flex h-full flex-col gap-6 md:px-12 lg:px-0">
				<h1 class="text-4xl font-bold">{content.TITLE}</h1>
				<p class="text-lg">
					{content.DESCRIPTION}
				</p>
				<div class="flex gap-4">
					<div class="mt-1">
						<svg
							xmlns="http://www.w3.org/2000/svg"
							class="icon icon-tabler icon-tabler-building"
							width="28"
							height="28"
							viewBox="0 0 24 24"
							stroke-width="1.5"
							stroke="#000000"
							fill="none"
							stroke-linecap="round"
							stroke-linejoin="round"
						>
							<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
							<path d="M3 21l18 0"></path>
							<path d="M9 8l1 0"></path>
							<path d="M9 12l1 0"></path>
							<path d="M9 16l1 0"></path>
							<path d="M14 8l1 0"></path>
							<path d="M14 12l1 0"></path>
							<path d="M14 16l1 0"></path>
							<path d="M5 21v-16a2 2 0 0 1 2 -2h10a2 2 0 0 1 2 2v16"></path>
						</svg>
					</div>
					<p>{content.ADDRESS}<br />{content.CITY}</p>
				</div>
				<div class="flex items-center gap-4">
					<div>
						<svg
							xmlns="http://www.w3.org/2000/svg"
							class="icon icon-tabler icon-tabler-phone"
							width="28"
							height="28"
							viewBox="0 0 24 24"
							stroke-width="1.5"
							stroke="#000000"
							fill="none"
							stroke-linecap="round"
							stroke-linejoin="round"
						>
							<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
							<path
								d="M5 4h4l2 5l-2.5 1.5a11 11 0 0 0 5 5l1.5 -2.5l5 2v4a2 2 0 0 1 -2 2a16 16 0 0 1 -15 -15a2 2 0 0 1 2 -2"
							></path>
						</svg>
					</div>
					<p>
						<a href="tel:+34 938 43 03 36" class="hover:underline">
							{content.PHONE}
						</a>
					</p>
				</div>
				<div class="flex items-center gap-4">
					<div>
						<svg
							xmlns="http://www.w3.org/2000/svg"
							class="icon icon-tabler icon-tabler-mail"
							width="28"
							height="28"
							viewBox="0 0 24 24"
							stroke-width="1.5"
							stroke="#000000"
							fill="none"
							stroke-linecap="round"
							stroke-linejoin="round"
						>
							<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
							<rect x="3" y="5" width="18" height="14" rx="2"></rect>
							<polyline points="3 7 12 13 21 7"></polyline>
						</svg>
					</div>
					<p>
						<a href="mailto:info@optimedic.es" class="hover:underline">
							{content.EMAIL}
						</a>
					</p>
				</div>
			</div>
		</section>
		<section class="w-full px-8 pb-32 pt-20 lg:w-1/2 lg:border-l lg:px-24 lg:py-48">
			<ContactForm client:load texts={content.FORM} />
		</section>
	</div>
</Layout>
